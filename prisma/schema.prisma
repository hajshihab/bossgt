model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   // e.g. 'admin', 'editor'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  body      String
  createdAt DateTime @default(now())
}
model BlogPost {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Certificate {
  id        Int      @id @default(autoincrement())
  title     String
  issuer    String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model TeamMember {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  bio       String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
